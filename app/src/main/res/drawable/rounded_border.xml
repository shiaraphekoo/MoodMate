<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define the border (stroke) properties -->
    <stroke
        android:width="2dp"
        android:color="#CCCCCC" /> <!-- Light grey border color -->

    <!-- Define the rounded corners -->
    <corners
        android:radius="12dp" /> <!-- Moderate rounding -->

    <!-- Define the background color inside the border -->
    <solid
        android:color="#FFFFFF" /> <!-- White background -->

</shape>
